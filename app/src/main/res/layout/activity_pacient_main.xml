<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F9"
    tools:context=".PacientMain">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_hospital"
        android:contentDescription="Hospital Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_margin="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Mensaje de bienvenida -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textColor="#1A1A1A"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgLogo" />

    <!-- Línea divisoria opcional para separar el encabezado -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#D1D1D1"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp" />

    <!-- Botón: Mis Citas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMisCitas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mis Citas"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón: Agendar Cita -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAgendarCita"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agendar Cita"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/btnMisCitas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón: Mis Recetas -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMisRecetas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mis Recetas"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/btnAgendarCita"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
